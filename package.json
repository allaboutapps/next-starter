{
  "name": "next_starter",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "RUNTIME_ENVIRONMENT=localhost concurrently -n NEXT,TS -c grey,green \"next dev\" \"npm run ts:watch\"",
    "build": "next build",
    "start": "next start",
    "build:local": "next build && cp -R .next/static .next/standalone/.next",
    "start:local": "node .next/standalone/server.js",
    "lint": "next lint",
    "disable-telemetry": "next telemetry disable",
    "ts": "tsc --noEmit --incremental --preserveWatchOutput --pretty",
    "ts:watch": "npm run ts -- --watch --project tsconfig.watch.json"
  },
  "dependencies": {
    "@emotion/cache": "^11.13.1",
    "@emotion/react": "^11.13.0",
    "@emotion/styled": "^11.13.0",
    "@hookform/resolvers": "^3.9.0",
    "@mui/material": "^5.16.5",
    "@mui/material-nextjs": "^5.16.4",
    "@tanstack/react-query": "^5.51.15",
    "axios": "^1.7.2",
    "axios-auth-refresh": "^3.3.6",
    "lodash": "^4.17.21",
    "next": "14.2.5",
    "react": "^18",
    "react-dom": "^18",
    "react-hook-form": "^7.52.1",
    "react-intl": "^6.6.8",
    "yup": "^1.4.0",
    "zustand": "^4.5.4"
  },
  "devDependencies": {
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "concurrently": "^8.2.2",
    "eslint": "^8",
    "eslint-config-next": "14.2.5",
    "postcss": "^8",
    "tailwindcss": "^3.4.1",
    "typescript": "^5"
  }
}
